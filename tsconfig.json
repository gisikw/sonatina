{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowArbitraryExtensions": true,
    "isolatedModules": true,
    "outDir": "dist",
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
